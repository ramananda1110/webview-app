<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="WebApp.Action" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Theme.App.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!--   for fullscreen dialog-->
    <style name="ThemeOverlay.App.DayNight.FullScreenDialog" parent="Theme.App.NoActionBar"> <!--theme for popup dialog full screen-->
        <!--          <item name="colorPrimaryDark">@color/app_maroon_700</item>-->
        <!--          <item name="colorPrimaryVariant">@color/app_maroon_700</item>-->
        <!--          <item name="colorAccent">@color/app_orange_500</item>-->
        <item name="android:windowIsFloating">false</item>
        <item name="actionMenuTextColor">@color/white</item>

    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- <style name="Theme.App.DayNight.Launcher">
         <item name="android:windowBackground">@drawable/preview_window</item>
     </style>-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextAppearance.Collapsing.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>


    <style name="Style.Orko.InputLayout.Box.Rounded_24" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="paddingStart">@dimen/_8sdp</item>
        <item name="colorAccent">@color/black</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.EditText.Rounded_24</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.ORKO.InputLayout.Box.Rounded_24</item>

    </style>

    <style name="ThemeOverlay.ORKO.InputLayout.Box.Rounded_24" parent="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="colorPrimary">@color/black</item>
    </style>


</resources>
